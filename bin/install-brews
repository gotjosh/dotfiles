#!/usr/bin/ruby

brews = %w(
  ack
  bash-completion
  cmake
  ctags
  dep
  direnv
  elasticsearch
  elixir
  envchain
  findutils
  fzf
  git
  gnutls
  go
  heroku
  htop
  htop-osx
  hub
  macvim
  nvm
  postgresql@9.4
  python
  rabbitmq
  rbenv
  rbenv-gemset
  readline
  redis
  ruby-build
  sqlite
  the_silver_searcher
  tig
  tree
  vim
  wget
)

installed_brews = `brew list`.split("\n")
puts("about to install brews...")

brews.each do |brew|
  if installed_brews.include?(brew)
    puts("-- #{brew} installed --")
  else
    puts("")
    system("brew install #{brew}")
  end
end

puts("done installing brews!")
